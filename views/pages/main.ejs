<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<%- include('../partials/navbar') %>
<main>
    <div id="search-box" class="mb-4 mt-3">
        <input type="text" id="city-input" placeholder="Enter city name">
        <button id="search-button">Search</button>
    </div>
    <div class="row d-flex">
        <div class="col-md-3">
            <div id="weather-info"></div>
        </div>
        <div class="col-md-2">
            <div id="map"></div>
        </div>
        <div class="col-md-5">
            <div class="clock">
                <div class="hour-hand"></div>
                <div class="minute-hand"></div>
                <div class="second-hand"></div>
            </div>
        </div>
    </div>
    <div class="row d-flex">
        <div class="col-md-5 mt-5">
            <button class="btn btn-primary" id="aqi_check">Check Air Quality</button>
        </div>
        <div class="col-md-5">
            <div class="gauge">
                <div role="meter" aria-valuemin="0" aria-valuemax="500" aria-labelledby="meter-label">
                    <div class="dial"><span class="aqi-num"></span><span>AQI</span>
                        <div class="arrow"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="aqi-info">
    </div>
    <div style="margin-bottom: 2rem; visibility: hidden">
        <label for="set-aqi">Set AQI:</label><input type="range" id="set-aqi" min="0" max="500" value="10">
    </div>
</main>
<%- include('../partials/footer') %>
<script src="/js/main.js"></script>
</body>
</html>
